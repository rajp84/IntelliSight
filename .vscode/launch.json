    "version": "0.2.0",
    "configurations": [
        {
            "name": "IntelliSight: FastAPI (backend)",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/backend/venv/bin/python",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "3001"
            ],
            "jinja": true
        }
    ]
}